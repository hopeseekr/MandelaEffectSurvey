#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

. "${DIR}"/lib/args.sh
. "${DIR}"/lib/env.sh
. "${DIR}"/../.env
. "${DIR}"/lib/images.sh

docker-compose -p $PROJECT_NAME \
    -f "$DIR"/../docker/docker-compose.base.yml \
    -f "$DIR"/../docker/docker-compose.dev.yml \
    ${ARGS}
