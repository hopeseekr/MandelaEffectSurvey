#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

. "${DIR}"/lib/args.sh
. "${DIR}"/lib/env.sh
. "${DIR}"/lib/images.sh
. "${DIR}"/lib/rm.sh
. "${DIR}"/lib/tty.sh

docker run -i${TTY} \
    -v $(pwd):/data ${RM} \
    -v ~/.composer:/var/www/.composer \
    -v ~/.ssh:/var/www/.ssh \
    --net ${PROJECT_NAME}_default ${ENV} \
    --link api:api.mandelaeffectsurvey.local \
    ${PHP_ACCOUNT}/${PHP_REPO}:${PHP_TAG} php "$@" 
