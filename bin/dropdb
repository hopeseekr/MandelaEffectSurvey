#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

#. "${DIR}"/lib/args.sh
. "${DIR}"/lib/env.sh
. "${DIR}"/lib/images.sh
. "${DIR}"/lib/rm.sh
. "${DIR}"/lib/tty.sh
q="'"

TERMINATE_SQL="select pg_terminate_backend(pid) from pg_stat_activity where datname=${q}$1${q};"

cat <<-EOF | "${DIR}"/psql
select pg_terminate_backend(pid) from pg_stat_activity where datname=${q}$1${q};
DROP DATABASE $1;
EOF

